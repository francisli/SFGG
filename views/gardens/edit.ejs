<h1>Edit Garden</h1>
<form method="post" action="/gardens/<%=garden.id%>?_method=patch" encType="multipart/form-data">

  <div class="form-group">
    <label>Garden Name</label>
    <input type="text" class="form-control" name="name" value="<%=garden.name%>">
  </div>

  <div class="form-group">
    <label>Short Description</label>
    <textarea class="form-control" name="shortDescription"><%=garden.shortDescription%>
    </textarea>
  </div>

  <div class="form-group">
    <label>Photo</label>
    <input type="file" class="form-control" name="photo">
  </div>

  <div class="form-group">
    <label>Address</label>
    <input type="text" class="form-control" name="address" value="<%=garden.address%>">
  </div>

  <div class="form-group">
    <label>Cross Street</label>
    <input type="text" class="form-control" name="crossStreet" value="<%=garden.crossStreet%>">
  </div>

  <div class="form-group">
    <label>City</label>
    <input type="text" class="form-control" name="city" value="<%=garden.city%>">
  </div>

  <div class="form-group">
    <label>Zip Code</label>
    <input type="text" class="form-control" name="zipCode" value="<%=garden.zipCode%>">
  </div>

  <div class="form-group">
    <label>Neighborhood</label>
    <input type="text" class="form-control" name="neighborhood" value="<%=garden.neighborhood%>">
  </div>

  <div class="form-group">
    <label>Managed By</label>
    <input type="text" class="form-control" name="managedBy" value="<%=garden.managedBy%>">
  </div>

  <div class="form-group">
    <label>Open Hours</label>
    <input type="text" class="form-control" name="openHours" value="<%=garden.openHours%>">
  </div>

  <div class="form-group">
    <label>Contact Email</label>
    <input type="text" class="form-control" name="contactEmail" value="<%=garden.contactEmail%>">
  </div>

  <div class="form-group">
    <label>Contact Phone</label>
    <input type="text" class="form-control" name="contactPhone" value="<%=garden.contactPhone%>">
  </div>

  <div class="form-group">
    <label>Contact Link</label>
    <input type="text" class="form-control" name="contactLink" value="<%=garden.contactLink%>">
  </div>

  <div class="form-group">
    <button class="btn btn-primary" type="submit">Submit</button>
  </div>

</form>
